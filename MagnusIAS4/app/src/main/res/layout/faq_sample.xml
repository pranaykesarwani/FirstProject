<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/faq_question"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Q1. What is a SAVE class?"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/faq_answer"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="A. ‘SAVE’ stands for ‘Smart Audio- Video Education’. The classes are pre-recorded in studio environment by experts with the help of digital electronic device. These classes are deliberately of shorter duration"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />
    </LinearLayout>

    </LinearLayout>