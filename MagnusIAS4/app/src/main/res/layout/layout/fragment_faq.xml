            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Q5. Whether I need to pay extra for tablet PC ?"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="A. No, the price paid for subscription includes Tablet PC also under Plan A."
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Q6.  How will I get SAVE classes (preloaded)Tablet PC?"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

