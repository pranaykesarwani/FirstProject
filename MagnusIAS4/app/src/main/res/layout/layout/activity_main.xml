<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlueJeansDark"
        app:popupTheme="@style/AppTheme.PopupOverlay">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/openDrawer"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/ic_dehaze_black_24dp"
                />


            <TextView

                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Magnus IAS"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:id="@+id/toolbar_title" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>
    <!-- The main content view -->
    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

    </LinearLayout>

    <!-- The navigation drawer list -->
    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/left_slide"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#cccccc"
        android:orientation="vertical"
        android:divider="@android:color/transparent">

        <Button
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Home"/>

        <Button
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="About"/>

    <LinearLayout
        android:id="@+id/aboutLayout"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="about us"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/ourteam"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="Our Team"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/director"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="From the Director's Desk"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/methodology"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="Methodology"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/mission"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="Mission and Vision"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="FAQ"
            android:background="@android:color/white"/>
    </LinearLayout>

        <Button
            android:id="@+id/subjects"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Subjects"/>

        <Button
            android:id="@+id/test_series"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Test Series"/>
        <Button
            android:id="@+id/resources"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Resources"/>

    <LinearLayout
        android:id="@+id/resourcesLayout"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="Gallery"
            android:background="@android:color/white"/>


        <!--//////////////////////////////////////////-->
        <LinearLayout
            android:id="@+id/resources_gallery_Layout"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/g_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"
                android:background="@android:color/white"
                android:text="Image"/>
            <Button
                android:id="@+id/g_video"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"
                android:background="@android:color/white"
                android:text="Video"/>

        </LinearLayout>

        <Button
            android:id="@+id/reference"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:text="Resource and Reference"
            android:background="@android:color/white"/>

        <LinearLayout
            android:id="@+id/referencelayout"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/article"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"
                android:background="@android:color/white"
                android:text="Article from Reliable Sources"/>
            <Button
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"
                android:background="@android:color/white"
                android:text="Important Notice"/>

            <Button
                android:id="@+id/bibliography"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:gravity="left|center_vertical"
                android:background="@android:color/white"
                android:text="Reference in bibliography"/>
        </LinearLayout>



    </LinearLayout>

        <Button
            android:id="@+id/pricing"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Pricing"/>
        <Button
            android:id="@+id/sampleClasses"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Sample Classes"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:paddingLeft="5dp"
            android:text="Contact Us"
            android:textAllCaps="false"/>



