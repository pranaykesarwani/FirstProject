<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/leftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:srcCompat="@mipmap/ic_launcher"
        android:maxHeight="100dp"
        android:maxWidth="70dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:scrollHorizontally="true"
        android:maxLines="1"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="MR Name"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leftIcon"
        android:layout_toEndOf="@+id/leftIcon" />

    <TextView
        android:id="@+id/subject_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject_name"
        android:layout_alignStart="@+id/subject_name"
        android:layout_below="@+id/subject_name"
        android:text="Email"
        android:lineSpacingExtra="-3dp"


        />

</RelativeLayout>